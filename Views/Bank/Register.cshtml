@model Banking_Management_System_Major_Project.Models.Register_user
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    bool isAdmin = User.IsInRole("Admin"); // Check if the logged-in user is an Admin
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-header bg-primary text-white text-center">
                        <h3>Register</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Register" method="post">
                            <!-- First Name -->
                            <div class="mb-3">
                                <label class="form-label">First Name</label>
                                <input asp-for="FirstName" class="form-control" placeholder="Enter First Name">
                                <span class="text-danger" asp-validation-for="FirstName"></span>
                            </div>

                            <!-- Last Name -->
                            <div class="mb-3">
                                <label class="form-label">Last Name</label>
                                <input asp-for="LastName" class="form-control" placeholder="Enter Last Name">
                                <span class="text-danger" asp-validation-for="LastName"></span>
                            </div>

                            <!-- Email -->
                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" placeholder="Enter Email">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>

                            <!-- Password -->
                            <div class="mb-3">
                                <label class="form-label">Password</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Enter Password">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>

                            <!-- Confirm Password -->
                            <div class="mb-3">
                                <label class="form-label">Confirm Password</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>

                            <!-- Role -->
                            <div class="mb-3">
                                <label class="form-label">Role</label>
                                @if (isAdmin)
                                {
                                    <select asp-for="Role" class="form-select" asp-items="Html.GetEnumSelectList<UserRole>()"></select>
                                }
                                else
                                {
                                    <input asp-for="Role" class="form-control" value="User" readonly>
                                }
                                <span class="text-danger" asp-validation-for="Role"></span>
                            </div>

                            <button type="submit" class="btn btn-primary w-100">Register</button>
                        </form>
                        <br />

                        <!-- Already have account section (single instance) -->
                        <div class="text-center mb-4">
                            Already have an account? <a asp-action="Login" asp-controller="Bank">Login Here</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />

    <!-- Required Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>