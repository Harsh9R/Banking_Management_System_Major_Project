@model Banking_Management_System_Major_Project.Models.AdminModel.UserRegistration

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-header bg-primary text-white text-center">
                        <h3>Register</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Register" method="post">
                            <!-- First Name -->
                            <div class="mb-3">
                                <label class="form-label">First Name</label>
                                <input asp-for="Fname" class="form-control" placeholder="Enter First Name">
                                <span class="text-danger" asp-validation-for="Fname"></span>
                            </div>

                            <!-- Middle Name -->
                            <div class="mb-3">
                                <label class="form-label">Middle Name</label>
                                <input asp-for="Mname" class="form-control" placeholder="Enter Middle Name">
                                <span class="text-danger" asp-validation-for="Mname"></span>
                            </div>

                            <!-- Last Name -->
                            <div class="mb-3">
                                <label class="form-label">Last Name</label>
                                <input asp-for="Lname" class="form-control" placeholder="Enter Last Name">
                                <span class="text-danger" asp-validation-for="Lname"></span>
                            </div>

                            <!-- Email -->
                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" placeholder="Enter Email">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>

                            <!-- Gender -->
                            <div class="mb-3">
                                <label class="form-label">Gender</label>
                                <select asp-for="Gender" class="form-select">
                                    <option value="">Select Gender</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span class="text-danger" asp-validation-for="Gender"></span>
                            </div>

                            <!-- Mobile Number -->
                            <div class="mb-3">
                                <label class="form-label">Mobile Number</label>
                                <input asp-for="Mobile" class="form-control" placeholder="Enter Mobile Number">
                                <span class="text-danger" asp-validation-for="Mobile"></span>
                            </div>

                            <!-- Date of Birth -->
                            <div class="mb-3">
                                <label class="form-label">Date of Birth</label>
                                <input asp-for="DateOfBirth" type="date" class="form-control">
                                <span class="text-danger" asp-validation-for="DateOfBirth"></span>
                            </div>

                            <!-- Username -->
                            <div class="mb-3">
                                <label class="form-label">Username</label>
                                <input asp-for="Username" class="form-control" placeholder="Enter Username">
                                <span class="text-danger" asp-validation-for="Username"></span>
                            </div>

                            <!-- Password -->
                            <div class="mb-3">
                                <label class="form-label">Password</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Enter Password">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>

                            <!-- Confirm Password -->
                            <div class="mb-3">
                                <label class="form-label">Confirm Password</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>

                            <!-- Role -->
                            <div class="mb-3">
                                <label class="form-label">Role</label>
                                <select asp-for="Role" class="form-select">
                                    <option value="">Select Role</option>
                                    <option value="Admin">Admin</option>
                                    <option value="User">User</option>
                                </select>
                                <span class="text-danger" asp-validation-for="Role"></span>
                            </div>

                            <button type="submit" class="btn btn-primary w-100">Register</button>
                        </form><br />

                        <!-- Already have account -->
                        <div class="text-center mb-4">
                            Already have an account? <a href="Login">Login Here</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
