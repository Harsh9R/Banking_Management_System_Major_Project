@model Register_user
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Register</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-header bg-primary text-white text-center">
                        <h3>Register</h3>
                    </div>
                    <div class="card-body">
                        <form asp-action="Register" method="post">
                            <div class="mb-3">
                                <label class="form-label">First Name</label>
                                <input asp-for="FirstName" class="form-control" placeholder="Enter First Name">
                                <span class="text-danger" asp-validation-for="FirstName"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Last Name</label>
                                <input asp-for="LastName" class="form-control" placeholder="Enter Last Name">
                                <span class="text-danger" asp-validation-for="LastName"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" placeholder="Enter Email">
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">ID Number</label>
                                <input asp-for="IdNumber" class="form-control" placeholder="Enter ID Number">
                                <span class="text-danger" asp-validation-for="IdNumber"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Username</label>
                                <input asp-for="UserName" class="form-control" placeholder="Enter Username">
                                <span class="text-danger" asp-validation-for="UserName"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Password</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Enter Password">
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Confirm Password</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password">
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Role</label>
                                <select asp-for="Role" class="form-select">
                                    <option value="">Select Role</option>
                                    <option value="Admin">Admin</option>
                                    <option value="User">User</option>
                                </select>
                                <span class="text-danger" asp-validation-for="Role"></span>
                            </div>

                            <button type="submit" class="btn btn-primary w-100">Register</button>
                        </form><br />
                        <!-- Checkbox -->
                        <div class="justify-content-center mb-4">
                            If Already have Account ?
                            <a href="Login"> Login Here</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div><br /><br /><br />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
