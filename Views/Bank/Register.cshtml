@model Register_user
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap Registration Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <section class="h-100 d-flex align-items-center bg-light">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-10">
                    <div class="card shadow-lg border-0 rounded-4">
                        <div class="row g-0">
                            <div class="col-lg-6 p-5">
                                <h3 class="fw-bold text-primary mb-4">General Information</h3>

                                <div class="mb-3">
                                    @Html.DropDownListFor(m => m.Title, new List<SelectListItem>
                                    {
                                    new SelectListItem { Text = "Title", Value = "" },
                                    new SelectListItem { Text = "Mr.", Value = "Mr." },
                                    new SelectListItem { Text = "Mrs.", Value = "Mrs." },
                                    new SelectListItem { Text = "Miss", Value = "Miss" }
                                    }, new { @class = "form-select" })
                                </div>

                                <span style="font-size:12px ; padding:5px ; color:red">Enter the name as per the Official Document *</span><br />
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First name" })
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        @Html.TextBoxFor(m => m.MiddleName, new { @class = "form-control", placeholder = "Middle name" })
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last name" })
                                    </div>
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(m => m.DateOfBirth, new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.DateOfBirth, new { @type = "date", @class = "form-control" })
                                </div>

                                <div class="mb-3">
                                    <label for="gender" class="form-label">Gender</label><br />
                                    @Html.RadioButtonFor(m => m.Gender, "Male", new { id = "male" }) Male
                                    @Html.RadioButtonFor(m => m.Gender, "Female", new { id = "female" }) Female
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(m => m.ParentName, new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.ParentName, new { @class = "form-control", placeholder = "Father’s/Mother’s/Guardian’s Name" })
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(m => m.Nationality, new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.Nationality, new { @class = "form-control", placeholder = "Nationality" })
                                </div>
                            </div>

                            <!-- Contact Details -->
                            <div class="col-lg-6 bg-primary text-white p-5">
                                <h3 class="fw-bold mb-4">Contact Details</h3>

                                <div class="mb-3">
                                    @Html.TextAreaFor(m => m.Address, new { @class = "form-control", placeholder = "Street + Nr" })
                                </div>

                                <div class="row">
                                    <div class="col-md-5 mb-3">
                                        @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control", placeholder = "Zip Code" })
                                    </div>
                                    <div class="col-md-7 mb-3">
                                        @Html.TextBoxFor(m => m.Area, new { @class = "form-control", placeholder = "Area" })
                                    </div>
                                </div>

                                <div class="mb-3">
                                    @Html.TextBoxFor(m => m.Country, new { @class = "form-control", placeholder = "Country" })
                                </div>

                                <div class="row">
                                    <div class="col-md-5 mb-3">
                                        @Html.TextBoxFor(m => m.PhoneCode, new { @class = "form-control", placeholder = "Code +" })
                                    </div>
                                    <div class="col-md-7 mb-3">
                                        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Phone Number" })
                                    </div>
                                </div>

                                <div class="mb-3">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Your Email" })
                                </div>

                                <div class="form-check mb-3">
                                    @Html.CheckBoxFor(m => m.TermsAccepted, new { @class = "form-check-input" })
                                    <label class="form-check-label" for="terms">
                                        I accept the <a href="#" class="text-white"><u>Terms and Conditions</u></a>.
                                    </label>
                                </div>
                            </div>

                            <!-- Identity Verification (KYC) -->
                            <div class="col-lg-6 bg-primary text-white p-5">
                                <h3 class="fw-bold mb-4">Identity Verification (KYC - Know Your Customer)</h3>

                                <div class="mb-3">
                                    @Html.LabelFor(m => m.AadhaarCardNumber)
                                    @Html.TextBoxFor(m => m.AadhaarCardNumber, new { @class = "form-control", placeholder = "Enter Aadhaar card Number", pattern = @"^\d{12}$", title = "Please enter exactly 12 digits", maxlength = "12", style = "border-bottom: 2px solid #000;", required = "true" })
                                </div>

                                <div class="mb-3">
                                    @Html.LabelFor(m => m.PanCardNumber)
                                    @Html.TextBoxFor(m => m.PanCardNumber, new { @class = "form-control", placeholder = "PAN Card Number (e.g., ABCDE1234F)", pattern = @"^[A-Z]{5}[0-9]{4}[A-Z]{1}$", title = "Please enter a valid PAN card number (e.g., ABCDE1234F)", maxlength = "10", style = "border-bottom: 2px solid #000;", required = "true" })
                                </div>

                                <button class="btn btn-light btn-lg w-100">Register</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
