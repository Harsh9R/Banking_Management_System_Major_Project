<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Banking System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/custom-navbar.css">
</head>
<body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top custom-navbar">
        <div class="container">
            <a class="navbar-brand text-dark" asp-controller="Home" asp-action="Index">🏦 Banking System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="User" asp-action="Index">🏠 Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="User" asp-action="ApplyCard">💳 Apply Card</a></li>

                    <!-- Services Dropdown Menu -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-dark" href="#" id="servicesDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            🛠 Services
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="servicesDropdown">
                            <li><a class="dropdown-item" asp-controller="User" asp-action="ApplyCard">Apply Card</a></li>
                            <li><a class="dropdown-item" asp-controller="User" asp-action="ShowBalance">View Balance</a></li>
                            <li><a class="dropdown-item" asp-controller="User" asp-action="FundTransfer">Transfer Fund</a></li>
                            <li><a class="dropdown-item" asp-controller="User" asp-action="KYCConfirmation">KYC</a></li>
                            <li><a class="dropdown-item" asp-controller="User" asp-action="ApplyLoan">Apply for Loan</a></li>
                            <li><a class="dropdown-item" asp-controller="User" asp-action="WithdrawMoney">Withdraw Money</a></li>
                        </ul>
                    </li>

                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="User" asp-action="ShowBalance">💰 Show Balance</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-controller="User" asp-action="Profile">👤 Profile</a></li>
                </ul>

                <!-- Search Bar -->
                <form class="d-flex search-box">
                    <input class="form-control me-2" type="search" placeholder="🔎 Search" aria-label="Search">
                    <button class="btn btn-light" type="submit">Search</button>
                </form>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-danger" asp-controller="User" asp-action="Logout">🚪 Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-5 pt-4">
        @RenderBody()
    </div>
    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
<footer class="footer bg-light text-dark text-center py-2 fixed-bottom">
    <div class="container">
        &copy; 2025 - BMS - <a class="text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
