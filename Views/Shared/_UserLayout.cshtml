<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - Banking System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-controller="User" asp-action="Index">Banking System</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="Index">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="ApplyCard">Apply Card</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="ShowBalance">Show Balance</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="Profile">Profile</a></li>
                    @* <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="ApplyLoan">Apply Loan</a></li> *@
                    @* <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="KYCConfirmation">KYC Confirmation</a></li> *@
                    @* <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="FundTransfer">Fund Transfer</a></li> *@
                    @* <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="DepositMoney">Deposit Money</a></li> *@
                    @* <li class="nav-item"><a class="nav-link" asp-controller="User" asp-action="WithdrawMoney">Withdraw Money</a></li> *@
                    <li class="nav-item"><a class="nav-link text-danger" asp-controller="User" asp-action="Logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
