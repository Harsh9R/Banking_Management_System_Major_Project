@model Banking_Management_System_Major_Project.Models.UserModel.BalanceViewModel
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<h2>Show Balance</h2>

<form asp-action="ShowBalance" method="post">
    <div class="form-group">
        <label asp-for="AccountNumber"></label>
        <input asp-for="AccountNumber" class="form-control" />
        <span asp-validation-for="AccountNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Check Balance</button>
</form>

@if (Model?.Balance != null)
{
    <h3>Your Balance: $@Model.Balance</h3>
}